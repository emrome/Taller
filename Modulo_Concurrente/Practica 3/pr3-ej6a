{.a- Tres robots deben recorrer el perímetro de su cuadrante, como se indica a continuación:
{El robot 1 comienza la esquina (2,2) y debe realizar un cuadrante de 6x6 juntando todas las flores que encuentre}
{El robot 2 comienza en la esquina (5,5) y debe realizar un cuadrante de 10x10 juntando todas las flores y los papeles que encuentre 
 {El robot 3 comienza en la esquina (9,9) y debe realizar un cuadrante de 7x7 juntando todos los papeles que encuentre}
{Cada robot que finalice su cuadrante deberá avisar al robot fiscalizador. Al recibir el aviso, el robot fiscalizador indicará inmediatamente una calle a la que deberá dirigirse el robot recolector, considerando que el robot que finalizó primero irá a la calle 20, el segundo a la 21 y el tercero a la 22. Cuando los robots recolectores reciben un número de calle, deberán posicionarse en la avenida 1 de dicha calle, y avanzar a lo largo de la calle depositando en cada esquina un papel, una flor o ambos, según lo que cada robot haya juntado. El recorrido finalizará al completar la calle o vaciarse las bolsas}
programa ej6a
procesos
  proceso juntarFlores(ES flores:numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      flores:=flores+1
  fin
  proceso juntarPapeles(ES papeles:numero) 
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
      mover
  fin
  
  proceso esquinasF(E cant:numero;ES flores:numero)
  comenzar
    repetir cant
      mover
      juntarFlores(flores)
  fin
  proceso esquinasP(E cant:numero;ES papeles:numero)
  comenzar
    repetir cant
      mover
      juntarPapeles(papeles)
  fin
  proceso esquinasFyP(E cant:numero;ES flores:numero;ES papeles:numero)
  comenzar
    repetir cant
      mover
      juntarFlores(flores)
      juntarPapeles(papeles)
  fin

  proceso recorrerC2(ES flores:numero)
  comenzar
    {lado1}
    esquinasF(6,flores)
    derecha
    
    {lado2}
    esquinasF(2,flores){dos esquina del segundo lado}
    {esquina conflictiva y la sig}
    BloquearEsquina(5,8)
    mover
    juntarFlores(flores)
    mover
    LiberarEsquina(5,8)
    juntarFlores(flores)
    esquinasF(2,flores)
    derecha
    
    {lado3}
    esquinasF(2,flores)
    BloquearEsquina(8,5)
    mover
    juntarFlores(flores)
    mover
    LiberarEsquina(8,5)
    juntarFlores(flores)
    esquinasF(2,flores)
    derecha
    
    {lado4}
    esquinasF(6,flores)
    derecha
  fin
  
  proceso recorrerC5(ES flores:numero;ES papeles:numero)
  comenzar
    {lado1}
    esquinasFyP(2,flores,papeles)
    BloquearEsquina(5,8)
    mover
    juntarFlores(flores)
    juntarPapeles(papeles)
    mover
    LiberarEsquina(5,8)
    juntarFlores(flores)
    juntarPapeles(flores)
    esquinasFyP(6,flores,papeles)
    derecha
    
    {lado2}
    esquinasFyP(3,flores,papeles)
    BloquearEsquina(9,15)
    mover
    juntarFlores(flores)
    juntarPapeles(papeles)
    mover
    LiberarEsquina(9,15)
    juntarFlores(flores)
    juntarPapeles(flores)
    esquinasFyP(5,flores,papeles)
    derecha
    
    {lado3}
    esquinasFyP(5,flores,papeles)
    BloquearEsquina(15,9)
    mover
    juntarFlores(flores)
    juntarPapeles(papeles)
    mover
    LiberarEsquina(15,9)
    juntarFlores(flores)
    juntarPapeles(papeles)
    esquinasFyP(3,flores,papeles)
    derecha
    
    {lado4}
    esquinasFyP(6,flores,papeles)
    BloquearEsquina(8,5)
    mover
    juntarFlores(flores)
    juntarPapeles(papeles)
    mover
    LiberarEsquina(8,5)
    juntarFlores(flores)
    juntarPapeles(papeles)
    esquinasFyP(2,flores,papeles)
    derecha
  fin
    
  proceso recorrerC9(ES papeles:numero)
  comenzar
    {lado1}
    esquinasP(5,papeles)
    BloquearEsquina(9,15)
    mover
    juntarPapeles(papeles)
    mover
    LiberarEsquina(9,15)
    juntarPapeles(papeles)
    derecha
    
    {lado2 y 3. No comparte con ningun otro}
    repetir 2
      esquinasP(7,papeles)
      derecha
    
    {lado4}
    BloquearEsquina(15,9)
    mover
    juntarPapeles(papeles)
    mover
    LiberarEsquina(15,9)
    juntarPapeles(papeles)
    esquinasP(5,papeles)
    derecha
  fin
  
areas
  area:AreaPC(2,2,16,16)
  calles:AreaPC(1,20,100,22)
  areaF:AreaP(1,1,1,1)

robots
  robot tipo1
  variables
    flores:numero
    calle:numero
  comenzar
    flores:=0
    {cuadrante}
    recorrerC2(flores)
   {envio que termino}
    EnviarMensaje(1,rFiscal)
    
   {recorrido calle} 
    RecibirMensaje(calle,rFiscal)
    Pos(1,calle)
    derecha
    si flores>100
      flores:=100 {para que no se vaya de la ciudad}
    repetir(flores -1)
      depositarFlor
      mover
    si (flores>0)
      depositarFlor
  fin
  
  robot tipo2
  variables
    flores,papeles:numero
    calle:numero
    cant:numero
  comenzar
    flores:=0
    papeles:=0
    {cuadrante}
    recorrerC5(flores,papeles)
    
    {envio mensaje que termine}
    EnviarMensaje(2,rFiscal)
    
   {recorrido calle} 
    RecibirMensaje(calle,rFiscal)
    Pos(1,calle)
    derecha
    si flores>papeles
      cant:=papeles
    sino
      cant:=flores
    si cant>100
      cant:=100
    repetir (cant -1)
      depositarFlor
      depositarPapel
      mover
    si (cant>0){caso de la ultima esquina del recorrido}
      depositarFlor
      depositarPapel
  fin

  robot tipo3
  variables
    papeles:numero
    calle:numero
    id:numero
  comenzar
    papeles:=0
    {cuadrante}
    recorrerC9(papeles)
    
    {envio que termino el cuadrante}
    EnviarMensaje(3,rFiscal)
   {recorrido calle} 
    RecibirMensaje(calle,rFiscal)
    Pos(1,calle)
    derecha
    si papeles>100
      papeles:=100
    repetir (papeles -1)
      depositarPapel
      mover
    si (papeles>0){en la ultima esquina}
      depositarPapel 
  fin 
 
  robot fiscalizador
  variables
    id:numero
    calle:numero
  comenzar

    calle:=20
    repetir 3
      RecibirMensaje(id,*)
      si (id=1)
        EnviarMensaje(calle,r1)
      sino
        si (id=2)
          EnviarMensaje(calle,r2)
        sino
          EnviarMensaje(calle,r3)
      calle:=calle+1
  fin
  
variables
  r1:tipo1
  r2:tipo2
  r3:tipo3
  rFiscal:fiscalizador
comenzar
  AsignarArea(rFiscal,areaF)
  AsignarArea(r1,area)
  AsignarArea(r1,calles)
  AsignarArea(r2,area)
  AsignarArea(r2,calles)
  AsignarArea(r3,area)
  AsignarArea(r3,calles)
  
  Iniciar(rFiscal,1,1)
  Iniciar(r1,2,2)
  Iniciar(r2,5,5)
  Iniciar(r3,9,9)
fin















