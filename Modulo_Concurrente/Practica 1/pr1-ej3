{Realice un programa en el que 3 robots realicen escaleras de 4 escalones, en las que el tamaño de cada escalon se incrementa en un 1 respecto al escalon anterior. El primer escalon sera de 1x1, el segundo de 2x2, y asi sucesivamente  Al finalizar el recorrido, cada robot debe informar la cantidad de escalones en los que la cantidad de papeles superó en 1 a la cantidad de flores. Durante el recorrido, no se debe modificar el contenido de las esquinas.} 
programa ej3 

procesos 
  proceso contarPapeles(ES papeles:numero) 
  variables
    papel:numero
  comenzar 
    papel:=0
    mientras HayPapelEnLaEsquina 
      tomarPapel 
      papel:=papel+1 
    repetir papel 
      depositarPapel 
    papeles:=papeles+papel
  fin 
  
  proceso contarFlores(ES flores:numero) 
  variables
    flor:numero
  comenzar 
    flor:=0
    mientras HayFlorEnLaEsquina 
      tomarFlor 
      flor:=flor+1 
    repetir flor
      depositarFlor    
    flores:=flores+flor   
  fin
  proceso escalon(E cant:numero;ES flores:numero;ES papeles:numero)
  comenzar
    repetir cant
      mover
      contarFlores(flores)
      contarPapeles(papeles)
  fin
  
  proceso recorrer(E veces:numero;ES cantMasPapel:numero) 
  variables 
    papeles,flores,medida:numero 
  comenzar 
    medida:=0 
    cantMasPapel:=0
    repetir veces 
      papeles:=0
      flores:=0  
      medida:=medida+1   
      escalon(medida,flores,papeles)
      derecha 
      escalon(medida,flores,papeles)
      repetir 3 
        derecha 
      si ((papeles - flores)=1)
        cantMasPapel:=cantMasPapel+1
  fin
  
areas
  ciudad:AreaC(12,6,32,24)
robots
  robot tipo1
  variables
    cantMasPapel:numero
  comenzar
    cantMasPapel:=0
    recorrer(4,cantMasPapel)
    Informar(cantMasPapel)
  fin

variables
  robot1:tipo1
  robot2:tipo1
  robot3:tipo1
  
comenzar
  AsignarArea(robot1,ciudad)
  AsignarArea(robot2,ciudad)
  AsignarArea(robot3,ciudad)
  Iniciar(robot1,22,6)
  Iniciar(robot2,17,10)
  Iniciar(robot3,12,14)
fin

