{Modifique el inciso anterior para que ahora el fiscalizador informe también, cuál}
{fue el robot ganador.}
programa ej1d
procesos 
  proceso juntarFlores(ES flor:numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      flor:=flor+1
  fin
  proceso recorrer(E cant:numero; ES flores:numero)
  comenzar
    repetir cant -1
      juntarFlores(flores)
      mover
    juntarFlores(flores)
  fin
  proceso calcularMax(E flores:numero; ES max:numero; E id:numero; ES idMax)
  comenzar
    si flores>max
      max:=flores
      idMax:=id
  fin

areas
  area1:AreaP(1,1,1,10)
  area2:AreaP(2,11,2,20)
  area3:AreaP(3,21,3,30)
  area4:AreaP(4,31,4,40)
  area5:AreaP(5,41,5,50)
  area6:AreaP(6,51,6,60)
  areaF:AreaP(2,1,2,1)

robots
  robot tipo1
  variables
    id,flores:numero
  comenzar
    flores:=0
    RecibirMensaje(id,rFiscal)
    recorrer(10,flores)
    EnviarMensaje(id,rFiscal)
    EnviarMensaje(flores,rFiscal)
  fin
  
  robot fiscal
  variables
    flores,id,max,ganador:numero
  comenzar
    max:=-1
    EnviarMensaje(1,robot1)
    EnviarMensaje(2,robot2)
    EnviarMensaje(3,robot3)
    EnviarMensaje(4,robot4)
    EnviarMensaje(5,robot5)
    EnviarMensaje(6,robot6)
    repetir 6
      RecibirMensaje(id,*)
      si(id=1)
        RecibirMensaje(flores,robot1)
      sino
        si(id=2)
          RecibirMensaje(flores,robot2)
        sino
          si(id=3)
            RecibirMensaje(flores,robot3)
          sino
            si(id=4)
              RecibirMensaje(flores,robot4)
            sino
              si(id=5)
                RecibirMensaje(flores,robot5)
              sino
                RecibirMensaje(flores,robot6)
     {calculo ganador}
      calcularMaximo(flores,max,id,ganador)
    Informar(ganador,max)
  fin
variables
  robot1:tipo1
  robot2:tipo1
  robot3:tipo1
  robot4:tipo1
  robot5:tipo1
  robot6:tipo1
  rFiscal:fiscal
comenzar
  AsignarArea(robot1,area1)
  AsignarArea(robot2,area2)
  AsignarArea(robot3,area3)
  AsignarArea(robot4,area4)
  AsignarArea(robot5,area5)
  AsignarArea(robot6,area6)
  AsignarArea(rFiscal,areaF)
  Iniciar(robot1,1,1)
  Iniciar(robot2,2,11)
  Iniciar(robot3,3,21)
  Iniciar(robot4,4,31)
  Iniciar(robot5,5,41)
  Iniciar(robot6,6,51)
  Iniciar(rFiscal,2,1)
fin
